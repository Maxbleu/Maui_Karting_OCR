<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_Karting_OCR.Pages.CircuitDetailPage"
             Shell.ForegroundColor="White"
             Title="{Binding Circuit.Name}"
             BackgroundColor="#f8f9fa"
             Shell.TitleColor="White">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="0,10,0,0">
        <Border Grid.Row="0"
                Margin="15,5,15,15"
                Stroke="#e0e0e0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 15"
                BackgroundColor="#e10600">
            <Grid Padding="20,15">
                <StackLayout HorizontalOptions="Center">
                    <Label Text="ðŸŽï¸" 
                           FontSize="32" 
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding Circuit.Name}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Detalles del Circuito" 
                           FontSize="14" 
                           TextColor="#ecf0f1"
                           Opacity="0.9"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Grid>
        </Border>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*" 
              ColumnSpacing="10"
              Margin="15,0,15,15">

            <Border Grid.Column="0"
                    Stroke="#e0e0e0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White">
                <StackLayout Padding="10,15">
                    <Border WidthRequest="50"
                           HeightRequest="50"
                           StrokeShape="RoundRectangle 25"
                           BackgroundColor="#e8f5e8"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10">
                        <Label Text="ðŸ†" 
                               FontSize="24" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <Label Text="Mejor Tiempo" 
                           FontSize="14" 
                           TextColor="#7f8c8d"
                           HorizontalTextAlignment="Center" />
                    <Label Text="{Binding Circuit.BestTime, StringFormat='{0:mm\\:ss\\.fff}'}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#27ae60"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

            <Border Grid.Column="1"
                    Stroke="#e0e0e0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White">
                <StackLayout Padding="10,15">
                    <Border WidthRequest="50"
                           HeightRequest="50"
                           StrokeShape="RoundRectangle 25"
                           BackgroundColor="#e8f4fd"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10">
                        <Label Text="â±ï¸" 
                               FontSize="24" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <Label Text="Promedio" 
                           FontSize="14" 
                           TextColor="#7f8c8d"
                           HorizontalTextAlignment="Center" />
                    <Label Text="{Binding AverageTime, StringFormat='{0:mm\\:ss\\.fff}'}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#3498db"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

            <Border Grid.Column="2"
                    Stroke="#e0e0e0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="White">
                <StackLayout Padding="10,15">
                    <Border WidthRequest="50"
                           HeightRequest="50"
                           StrokeShape="RoundRectangle 25"
                           BackgroundColor="#fff3e0"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10">
                        <Label Text="ðŸ”„" 
                               FontSize="24" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <Label Text="Total Vueltas" 
                           FontSize="14" 
                           TextColor="#7f8c8d"
                           HorizontalTextAlignment="Center" />
                    <Label Text="{Binding TotalLaps}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#e67e22"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Margin="15,0,15,15"
                Stroke="#e0e0e0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="White">
            <Grid RowDefinitions="Auto,*">
                <Label Text="Historial de Vueltas" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50"
                       Margin="15,15,15,5"/>

                <CollectionView Grid.Row="1" 
                                ItemsSource="{Binding LapTimes}"
                                Margin="0,0,0,0">
                    <CollectionView.Header>
                        <Grid ColumnDefinitions="1*,*,*" 
                              Padding="15,10" 
                              BackgroundColor="#f5f5f5">
                            <Label Grid.Column="0" Text="#" FontAttributes="Bold" TextColor="#7f8c8d" />
                            <Label Grid.Column="1" Text="Tiempo" FontAttributes="Bold" TextColor="#7f8c8d" />
                            <Label Grid.Column="2" Text="Fecha" FontAttributes="Bold" TextColor="#7f8c8d" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="1*,*,*" Padding="15,12">
                                <Grid.Triggers>
                                    <DataTrigger TargetType="Grid" Binding="{Binding IsBestTime}" Value="True">
                                        <Setter Property="BackgroundColor" Value="#e8f5e8" />
                                    </DataTrigger>
                                </Grid.Triggers>

                                <Label Grid.Column="0" 
                                       Text="{Binding LapNumber}" 
                                       VerticalOptions="Center"
                                       TextColor="#2c3e50"
                                       FontSize="14" />

                                <Label Grid.Column="1" 
                                       Text="{Binding Time, StringFormat='{0:mm\\:ss\\.fff}'}" 
                                       VerticalOptions="Center"
                                       FontAttributes="{Binding IsBestTime, Converter={StaticResource BoolToFontAttributesConverter}}"
                                       TextColor="#2c3e50"
                                       FontSize="14" />

                                <Label Grid.Column="2" 
                                       Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" 
                                       VerticalOptions="Center"
                                       TextColor="#2c3e50"
                                       FontSize="14" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <StackLayout VerticalOptions="Center" 
                                    HorizontalOptions="Center"
                                    Padding="20,40">
                            <Label Text="â±ï¸" 
                                   FontSize="48" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="No hay tiempos registrados" 
                                   FontSize="16" 
                                   TextColor="#7f8c8d"
                                   HorizontalTextAlignment="Center"
                                   Margin="0,10,0,0" />
                            <Label Text="Agrega tu primer tiempo para este circuito" 
                                   FontSize="14" 
                                   TextColor="#95a5a6"
                                   HorizontalTextAlignment="Center"
                                   Margin="0,5,0,0" />
                        </StackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>
        </Border>

        <Button Grid.Row="3" 
                Text="+ Agregar Nuevo Tiempo" 
                Margin="15,0,15,20"
                Command="{Binding AddLapTimeCommand}"
                BackgroundColor="#e10600"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50" />
    </Grid>

</ContentPage>